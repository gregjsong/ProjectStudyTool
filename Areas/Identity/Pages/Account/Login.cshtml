@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Downloaded Theme-->
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <!-- Google font-->
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link href="https://fonts.googleapis.com/css2?family=Newsreader:ital,wght@0,600;1,600&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Mulish:ital,wght@0,300;0,500;0,600;0,700;1,300;1,500;1,600;1,700&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,400;1,400&amp;display=swap" rel="stylesheet" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            background-image: url('../images/confetti.jpg');
            background-size: cover;
            background-position: center;
        }

        .form-signin {
            max-width: 500px;
            padding: 2rem;
            margin: 0 auto;
            background-color: rgba(255, 255, 255, 0.8);
            /* Optional: make form background slightly transparent */
            border-radius: 10px;
            /* Optional: round corners for the form */
            box-shadow: 04px8pxrgba(0, 0, 0, 0.1);
            /* Optional: add a shadow for better contrast */
        }

        .form-signin .form-floating:focus-within {
            z-index: 2;
        }

        .form-signin input[type="email"],
        .form-signin input[type="password"] {
            margin-bottom: -1px;
        }

        .authentication-links {
            margin-top: 10px;
        }
    </style>

</head>

<body>
    <section>
    <div class="container px-5 py-4">

        <div class="row w-100">
            <div class="col-md-6 image-side d-none d-md-block">
                <!-- The image-side will be hidden on small screens and displayed on medium and larger screens -->
            </div>
            <div class="col-md-6 form-side d-flex align-items-center justify-content-center">
                <!-- Your form will be here -->
                <form class="form-signin" id="account" method="post">
                    <!-- Form content as before -->
                </form>
            </div>
        </div>
    </div>


    <div class="container">
        <form class="form-signin" id="account" method="post">
            <h2 class="form-signin-heading">@ViewData["Title"]</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input type="email" id="inputEmail" asp-for="Input.Email" class="form-control border-0"
                    placeholder="name@example.com" required autofocus>
                <label for="inputEmail">Email address</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input type="password" id="inputPassword" asp-for="Input.Password" class="form-control border-0"
                    placeholder="Password" required>
                <label for="inputPassword">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" asp-for="Input.RememberMe"> Remember me
                </label>
            </div>

            <button class="w-100 btn btn-lg btn-primary" type="submit">Log in</button>

            <div class="authentication-links">
                <a id="forgot-password" class="text-decoration-none" asp-page="./ForgotPassword">Forgot your password?</a><br>
                <a class="text-decoration-none" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a><br>
                <a id="resend-confirmation" class="text-decoration-none" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
            </div>
        </form>
    </div>
    </section>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>

</html>
