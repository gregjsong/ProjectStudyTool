@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css">
    <style>
        body {
        @*padding-top:40px;*@padding-bottom: 40px;
            background-color: #f5f5f5;
            background-image: url('../images/login4.jpg');
            background-size: cover;
            background-position: center;
        }

        .form-signin {
            max-width: 400px;
            padding: 15px;
            margin: 0 auto;
            background-color: rgba(255, 255, 255, 0.8);
            /* Optional: make form background slightly transparent */
            border-radius: 10px;
            /* Optional: round corners for the form */
            box-shadow: 04px8pxrgba(0, 0, 0, 0.1);
            /* Optional: add a shadow for better contrast */
        }

        .form-signin .form-floating:focus-within {
            z-index: 2;
        }

        .form-signin input[type="email"],
        .form-signin input[type="password"] {
            margin-bottom: -1px;
        }

        .authentication-links {
            margin-top: 10px;
        }
    </style>

</head>

<body>
    <div class="container-fluid login-container">
        <div class="row w-100">
            <div class="col-md-6 image-side d-none d-md-block">
                <!-- The image-side will be hidden on small screens and displayed on medium and larger screens -->
            </div>
            <div class="col-md-6 form-side d-flex align-items-center justify-content-center">
                <!-- Your form will be here -->
                <form class="form-signin" id="account" method="post">
                    <!-- Form content as before -->
                </form>
            </div>
        </div>
    </div>


    <div class="container">
        <form class="form-signin" id="account" method="post">
            <h2 class="form-signin-heading">@ViewData["Title"]</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input type="email" id="inputEmail" asp-for="Input.Email" class="form-control"
                    placeholder="name@example.com" required autofocus>
                <label for="inputEmail">Email address</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input type="password" id="inputPassword" asp-for="Input.Password" class="form-control"
                    placeholder="Password" required>
                <label for="inputPassword">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" asp-for="Input.RememberMe"> Remember me
                </label>
            </div>

            <button class="w-100 btn btn-lg btn-primary" type="submit">Log in</button>

            <div class="authentication-links">
                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a><br>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a><br>
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
            </div>
        </form>
    </div>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>

</html>
